<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_login"
    tools:context="com.ultrapower.sc.splash.view.SplashActivity">
    <TextView
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="@string/app_name"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/splash_et_username"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/loginform1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_user"
        android:drawablePadding="5dp"
        android:maxLength="11"
        android:maxLines="1"
        android:inputType="number"
        android:digits="0123456789"
        android:hint="请输入用户名/手机号码"/>
    <EditText
        android:id="@+id/splash_et_userpassword"
        android:drawableLeft="@drawable/icon_passord"
        android:drawablePadding="5dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/loginform2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:hint="请输入密码"
        android:inputType="textPassword"
        />
    <CheckBox
        android:id="@+id/splash_cb_rememberword"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="记住密码"
        android:checked="false"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/splash_btn_commit"
        android:paddingTop="5dp"
        android:background="@drawable/btn_nor_button_selector"
        android:textSize="20sp"
        android:text="登录"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <pl.droidsonroids.gif.GifImageView
        android:visibility="gone"
        android:id="@+id/splash_img_anim"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:src="@drawable/gif_landing1"
        />

</LinearLayout>
